{
  "name": "@ellieproject/ellie",
  "version": "0.1.0",
  "description": "A generic LLE (Low Level Emulation) environment written entirely in Javascript",
  "main": "src/ellie.js",
  "exports": {
    ".": "./src/ellie.js",
    "./*": "./src/ellie/*.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "coverage": "nyc --reporter html --reporter text --report-dir docs/coverage npm run test:html",
    "lint": "eslint src/",
    "test": "npm run test:text test:html",
    "test:text": "ava --color | tee >(sed -n 's/\\x1B\\[[0-9;]\\{1,\\}[A-Za-z]//gw docs/test.log')",
    "test:html": "ava --tap | taplet -o docs/test.html"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ellieproject/ellie.js.git"
  },
  "keywords": [
    "Low Level Emulation"
  ],
  "author": "The Ellie Project, Grant Sparks",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ellieproject/ellie.js/issues"
  },
  "homepage": "https://github.com/ellieproject/ellie.js#readme",
  "devDependencies": {
    "ava": "^3.15.0",
    "eslint": "^7.32.0",
    "nyc": "^15.1.0",
    "taplet": "^0.2.0"
  }
}
